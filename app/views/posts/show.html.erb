<div class="d-flex flex-column">
    <div class="ml-auto mr-auto">
        <h1 class="text-center">This post</h1>
        <div class="card text-white bg-dark mb-3" style="max-width: 80rem;">
            <div class="card-header">
                <div class="m-auto">
                    <% if @current_account.user == @post.user %>
                        <%= link_to 'Edit post', edit_post_path(@post), class: "btn btn-success" %>
                        <%= link_to 'Delete post', post_path(@post), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                    <% end %>
                </div>
            </div>
            <div class="card-body">
                <p class="card-text">
                    <%= image_tag @post.user.avatar, class:'imageUserComment' if @post.user.avatar.attached? %>@<%= @post.user.first_name %> <%= @post.user.last_name %><br>
                </p>
                <p class="card-title">
                    <small><b>Created: </b>: <%= time_ago_in_words(@post.created_at) %> ago.<br></small>
                </p>
                <p class="card-text">
                    <b>Content: </b>: <%= @post.body %><br>
                </p>
                <div class="d-flex imagesDiv">
                    <% for i in 0...@post.images.count %>
                        <%= image_tag @post.images[i], class:"postImage" %>
                    <% end %>
                </div>

                <div class="p-3">
                    <div>
                        <% if @post.comments.present?  %>
                            <h3>Comments.</h3>
                            <%= render @post.comments %>
                        <% end %>
                    </div>
                    <br>
                </div>

            </div>
        </div>
    </div>
</div>
<%= link_to 'Back', root_path, class:"btn btn-secondary" %>