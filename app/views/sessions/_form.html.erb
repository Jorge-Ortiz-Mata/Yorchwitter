<div>
    <%= form_with scope: :session, url: signin_path do |form| %>
        <div class="form-group">
            <%= form.label "Email: " %>
            <%= form.text_field :email, class:"form-control", placeholder: "smith@example.com" %>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <%= form.label "Password: " %>
            <%= form.password_field :password, class:"form-control" %>
        </div>
        <br><br>
        <div>
            <%= form.submit "Sign in", data: {turbo: false}, class:"btn btn-success" %>
        </div>
    <% end %>
</div>
